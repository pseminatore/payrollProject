#include <vector>
#include <iostream>
using namespace std;


vector <int> hours {7 , 0};
vector <int> empId {5658845, 4520125, 7895122, 8777541, 8451277, 1302850, 7580489};
vector <double> payRate {7 , 0.0};
vector <double> wages {7 , 0.0};
vector <int> employees;

int menuOption;
void calculateWages();
void getEmployeeInfo();
void printEmployeeInfo();
void employeeAmount ();
int amountOfEmployees = 7;
int hiredEmployees;
int firedEmployees;
int main()


{
   do
    {
       cout << "Please chose an option:\n";
       cout << "1: Calculate wages\n2: Change employees\n3: Save payroll to file\n4: Exit program\n";

       //Runs loop to allow input of valid data
       int inputCheck = 1;
       do
       {
            cin >> menuOption;
            if (menuOption > 4 || menuOption < 1)
            {
               cout <<"Please enter a valid option \n\n";
               inputCheck = 0;
               cout << "Please chose an option:\n";
               cout << "1: Calculate wages\n2: Change employees\n3: Save payroll to file\n4: Exit program\n";
           }
           else
           {
               inputCheck = 1;
               cout << endl;
           }
       }
       while (inputCheck == 0);

       if(menuOption == 1)
       {
           getEmployeeInfo();
           calculateWages();
           printEmployeeInfo();
           //Right now this just prints out all the data at the end to make sure nothing went wrong in the program
       }

       else if (menuOption == 2)
       {
           employeeAmount();
       }


       else if (menuOption == 4)
           return 0;
   }
    while (menuOption != 4);
    return 0;
}

