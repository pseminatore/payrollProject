void employeeAmount()
{

cout << "How many employees do you have?: " << endl;
cin >> amountOfEmployees;

cout << "How many new employees have you hired?: " << endl;
cin >> hiredEmployees;

cout << "How many employees have you fired?: " << endl;
cin >> firedEmployees;

amountOfEmployees = (amountOfEmployees + hiredEmployees) - firedEmployees;


for (int k=0; k < amountOfEmployees; k++)
    employees.push_back (k);

}


void calculateWages()
{
	for (int emp = 0;emp<amountOfEmployees;emp++)
	{
       	if(hours[emp] >= 40)
        {
            double overtimePay = (hours[emp]-40) *1.5;
            wages[emp] = (hours[emp] * payRate[emp]) + overtimePay;
        }
       	else
       	{
            wages[emp] = hours[emp] * payRate [emp];
       	}
	}
}
void getEmployeeInfo()
{
	//Gets hours and payrate information for each employee
	for(int i=0; i<amountOfEmployees; i++)
    {
        cout<<"Employee: "<<i+1<<endl;
        cout<<""<<endl;
        cout<<"Please enter the hours that Employee "<< i+1 <<" worked this week: " << endl;
        cin >> hours[i];
        cout<<"Please enter Employee "<< i+1 <<"'s pay rate: $";
        cin >> payRate[i];
        cout <<""<<endl;
        cout <<""<<endl;
	}
}
void printEmployeeInfo()
{
    for(int j=0; j<7; j++)
    {
        cout << "Employee ID: "<<empId[j] << " "<<endl;
        cout << "Hours worked: " <<hours[j] << " "<<endl;
        cout << "Pay Rate: $" <<payRate[j] << " "<<endl;
        cout << "Wages: $" << wages[j] << " "<< endl;
        cout <<"--------------------------------------"<<endl;
   }
}
